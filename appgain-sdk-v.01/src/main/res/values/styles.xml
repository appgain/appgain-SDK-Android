<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <!-- Customize your theme here. -->

        <item name="android:windowActionBarOverlay">true</item>

        <!-- If you want to implement your custom style of CirclePageIndicator, do it like so: -->
        <item name="vpiCirclePageIndicatorStyle">@style/CustomTabPageIndicator</item>

    </style>

    <style name="AppBaseAlternativeTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->


    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

    </style>

    <!-- ActionBar styles -->


    <style name="AppAlternativeTheme" parent="AppBaseAlternativeTheme">
        <!-- All customizations that are NOT specific to QuestionHeader particular API-level can go here. -->
    </style>

    <!--<style name="CustomUpIndicatorTheme" parent="AppAlternativeTheme">-->
        <!--<item name="android:homeAsUpIndicator">@drawable/ic_up_indicator</item>-->
    <!--</style>-->


    <style name="CustomTabPageIndicator" >
        <item name="android:gravity">center</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#FF555555</item>
    </style>

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars</item>
        <item name="android:width">@dimen/star_height</item>
        <item name="android:minHeight">@dimen/star_height</item>
        <item name="android:gravity">center_vertical|center_horizontal|center</item>
    </style>

    <style name="AboutDialog" parent="android:Theme.Holo.Light.Dialog.MinWidth">
        <item name="android:textColor">#E5492A</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:radius">@dimen/space_2x</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:popupBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


</resources>
