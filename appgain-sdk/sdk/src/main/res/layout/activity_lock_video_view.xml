<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:background="#4b000000"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr"
    tools:context=".PushNotfication.OverKeyGuardActivities.WebViewActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <FrameLayout
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/youtube_player_view_layout"
            android:clipChildren="true"
            android:elevation="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/actionButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/black_rect_corner_2p"
            android:minHeight="148dp"
            app:layout_constraintWidth_percent="0.95"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="0dp">
            <com.google.android.exoplayer2.ui.PlayerView
                android:background="#212121"
                app:resize_mode="fit"
                android:id="@+id/playerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>



        <Button
            android:visibility="gone"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:layout_marginBottom="8dp"
            android:background="@drawable/blue_rect"
            android:text="@string/view"
            app:layout_constraintWidth_max="wrap"
            android:id="@+id/actionButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/youtube_player_view_layout"
            android:layout_width="wrap_content"
            android:paddingStart="48dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingEnd="48dp"
            android:layout_height="wrap_content" />


    </android.support.constraint.ConstraintLayout>







    <FrameLayout
        android:id="@+id/close"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:background="@drawable/black_circle"
        app:layout_anchorGravity="end"
        app:layout_anchor="@id/playerView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        >
        <ImageView
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_close_white_18"
            android:layout_width="12dp"
            android:layout_height="12dp"
            />
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>