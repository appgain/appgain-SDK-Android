<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/user_info_layout"
        android:layout_marginBottom="16dp"
        android:paddingTop="16dp"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView

            android:layout_gravity="end"
            android:clickable="true"
            android:textColor="@color/colorAccent"
            android:textSize="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Personalization"
            android:id="@+id/dialog_add"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/trigger_point_name_input_layout"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textColorHint="@color/grey_600"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/trigger_point_name_input"
                android:textSize="16dp"
                android:textColor="@color/grey_900"
                android:hint="trigger point name"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <requestFocus/>
        </android.support.design.widget.TextInputLayout>




        <android.support.v7.widget.RecyclerView
            android:id="@+id/personalizationRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <LinearLayout
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:visibility="visible"
        android:id="@+id/dialog_action_layout"
        android:background="@color/white"
        android:layoutDirection="rtl"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        >



        <TextView
            android:clickable="true"
            android:textColor="@color/colorAccent"
            android:textSize="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:id="@+id/dialog_confirm"
            />
    </LinearLayout>




</LinearLayout>