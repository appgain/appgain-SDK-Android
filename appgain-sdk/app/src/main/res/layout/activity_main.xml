<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
      <ScrollView

          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/grey_900"
          android:id="@+id/container_view"
          >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                  <ProgressBar
                      android:visibility="invisible"
                      android:indeterminate="true"
                      style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                      android:id="@+id/loading_bar"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" />

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">


                        <android.support.v7.widget.CardView
                            android:id="@+id/inti_anonymous"
                            android:layout_weight="1"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="3dp"
                            app:cardCornerRadius="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                              <LinearLayout
                                  android:orientation="vertical"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content">
                                    <FrameLayout
                                        android:background="@color/light_blue_500"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                          <ImageView
                                              android:src="@drawable/ic_link_white_48dp"
                                              android:layout_marginBottom="16dp"
                                              android:layout_marginTop="16dp"
                                              android:layout_gravity="center"
                                              android:layout_width="84dp"
                                              android:layout_height="84dp" />
                                    </FrameLayout>
                                    <FrameLayout

                                        android:background="@color/light_blue_700"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                          <TextView
                                              android:layout_marginBottom="8dp"
                                              android:layout_marginTop="8dp"
                                              android:textColor="@color/white"
                                              android:layout_gravity="center"
                                              android:text="@string/init_anonymous"
                                              android:layout_width="wrap_content"
                                              android:layout_height="wrap_content" />
                                    </FrameLayout>
                              </LinearLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:id="@+id/inti_with_username"
                            android:layout_weight="1"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="3dp"
                            app:cardCornerRadius="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                              <LinearLayout
                                  android:orientation="vertical"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content">
                                    <FrameLayout
                                        android:background="@color/deep_purple_A200"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                          <ImageView
                                              android:src="@drawable/ic_link_white_48dp"
                                              android:layout_marginEnd="24dp"
                                              android:layout_marginStart="24dp"
                                              android:layout_marginBottom="16dp"
                                              android:layout_marginTop="16dp"
                                              android:layout_gravity="center"
                                              android:layout_width="84dp"
                                              android:layout_height="84dp" />
                                    </FrameLayout>
                                    <FrameLayout

                                        android:background="@color/deep_purple_A700"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                          <TextView
                                              android:layout_marginBottom="8dp"
                                              android:layout_marginTop="8dp"
                                              android:textColor="@color/white"
                                              android:layout_gravity="center"
                                              android:text="@string/inti_with_username"
                                              android:layout_width="wrap_content"
                                              android:layout_height="wrap_content" />
                                    </FrameLayout>
                              </LinearLayout>
                        </android.support.v7.widget.CardView>
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">


                        <android.support.v7.widget.CardView
                            android:id="@+id/smart_deep_link_create_button"
                            android:layout_weight="1"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="3dp"
                            app:cardCornerRadius="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                              <LinearLayout
                                  android:orientation="vertical"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content">
                                    <FrameLayout
                                        android:background="@color/pink_A200"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                          <ImageView
                                              android:src="@drawable/ic_link_white_48dp"
                                              android:layout_marginBottom="16dp"
                                              android:layout_marginTop="16dp"
                                              android:layout_gravity="center"
                                              android:layout_width="84dp"
                                              android:layout_height="84dp" />
                                    </FrameLayout>
                                    <FrameLayout

                                        android:background="@color/pink_500"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                          <TextView
                                              android:layout_marginBottom="8dp"
                                              android:layout_marginTop="8dp"
                                              android:textColor="@color/white"
                                              android:layout_gravity="center"
                                              android:text="@string/smart_deep_link"
                                              android:layout_width="wrap_content"
                                              android:layout_height="wrap_content" />
                                    </FrameLayout>
                              </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/deferred_deep_linking_button"
                            android:layout_weight="1"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="3dp"
                            app:cardCornerRadius="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                              <LinearLayout
                                  android:orientation="vertical"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content">
                                    <FrameLayout
                                        android:background="@color/purple_A200"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                          <ImageView
                                              android:src="@drawable/ic_link_white_48dp"
                                              android:layout_marginEnd="24dp"
                                              android:layout_marginStart="24dp"
                                              android:layout_marginBottom="16dp"
                                              android:layout_marginTop="16dp"
                                              android:layout_gravity="center"
                                              android:layout_width="84dp"
                                              android:layout_height="84dp" />
                                    </FrameLayout>
                                    <FrameLayout

                                        android:background="@color/purple_A700"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                          <TextView
                                              android:layout_marginBottom="8dp"
                                              android:layout_marginTop="8dp"
                                              android:textColor="@color/white"
                                              android:layout_gravity="center"
                                              android:text="@string/deferred_deep_linking"
                                              android:layout_width="wrap_content"
                                              android:layout_height="wrap_content" />
                                    </FrameLayout>
                              </LinearLayout>
                        </android.support.v7.widget.CardView>
                  </LinearLayout>



                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">


                        <android.support.v7.widget.CardView
                            android:id="@+id/deep_page_create"
                            android:layout_weight="1"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="3dp"
                            app:cardCornerRadius="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                              <LinearLayout
                                  android:orientation="vertical"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content">
                                    <FrameLayout
                                        android:background="@color/amber_400"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                          <ImageView
                                              android:src="@drawable/ic_link_white_48dp"
                                              android:layout_marginBottom="16dp"
                                              android:layout_marginTop="16dp"
                                              android:layout_gravity="center"
                                              android:layout_width="84dp"
                                              android:layout_height="84dp" />
                                    </FrameLayout>
                                    <FrameLayout

                                        android:background="@color/amber_700"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                          <TextView
                                              android:layout_marginBottom="8dp"
                                              android:layout_marginTop="8dp"
                                              android:textColor="@color/white"
                                              android:layout_gravity="center"
                                              android:text="@string/deep_page_create"
                                              android:layout_width="wrap_content"
                                              android:layout_height="wrap_content" />
                                    </FrameLayout>
                              </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/automator"
                            android:layout_weight="1"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="3dp"
                            app:cardCornerRadius="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                              <LinearLayout
                                  android:orientation="vertical"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content">
                                    <FrameLayout
                                        android:background="@color/deep_orange_400"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                          <ImageView
                                              android:src="@drawable/ic_link_white_48dp"
                                              android:layout_marginEnd="24dp"
                                              android:layout_marginStart="24dp"
                                              android:layout_marginBottom="16dp"
                                              android:layout_marginTop="16dp"
                                              android:layout_gravity="center"
                                              android:layout_width="84dp"
                                              android:layout_height="84dp" />
                                    </FrameLayout>
                                    <FrameLayout

                                        android:background="@color/deep_orange_500"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                          <TextView
                                              android:layout_marginBottom="8dp"
                                              android:layout_marginTop="8dp"
                                              android:textColor="@color/white"
                                              android:layout_gravity="center"
                                              android:text="Automator"
                                              android:layout_width="wrap_content"
                                              android:layout_height="wrap_content" />
                                    </FrameLayout>
                              </LinearLayout>
                        </android.support.v7.widget.CardView>
                  </LinearLayout>


            </LinearLayout>
      </ScrollView>
</android.support.design.widget.CoordinatorLayout>